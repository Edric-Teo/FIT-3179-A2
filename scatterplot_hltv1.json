{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A small multiple scatterplot showing HLTV 2.0 Rating vs K/D Ratio, Impact, and Total Kills.",
  "title": {
    "text":"HLTV2.0 Statistics of Counter-Strike Pro Players",
    "font": "Squada One",
    "fontWeight": "normal",
    "fontSize": 24,
    "subtitleFontSize": 16,
    "anchor": "start",
    "color": "#000000"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/hltv_playerStats-complete.csv"
  },
  "hconcat": [
    {
      "width": 300,
      "height": 300,
      "layer": [{

      "mark": "point",
      "encoding": {
        "x": {
          "field": "rating",
          "type": "quantitative",
          "title": "HLTV 2.0 Rating",
          "scale": {"domain": [0.7,1.4]}
        },
        "y": {
          "field": "kd_ratio",
          "type": "quantitative",
          "title": "K/D Ratio",
          "scale": {"domain": [0.5, 1.6]}
        }
      }
    },
    {
      "mark": {"type": "errorband", "extent": "stdev", "opacity": 0.2},
      "encoding": {
        "y": {
          "field": "kd_ratio",
          "type": "quantitative",
          "title": "K/D Ratio",
          "axis": {"format": ".2f"}
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "kd_ratio",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    }
  ]
    },
    {
      "width": 300,
      "height": 300,
      "layer": [{
      "mark": "point",
      "encoding": {
        "x": {
          "field": "rating",
          "type": "quantitative",
          "title": "HLTV 2.0 Rating",
          "scale": {"domain": [0.7,1.4]}
        },
        "y": {
          "field": "impact",
          "type": "quantitative",
          "title": "Impact",
          "scale": {"domain": [0, 1.8]}
        }
      }
    },
    {
      "mark": {"type": "errorband", "extent": "stdev", "opacity": 0.2},
      "encoding": {
        "y": {
          "field": "impact",
          "type": "quantitative",
          "title": "Impact",
          "axis": {"format": ".2f"}
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "impact",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    }
  ]
    },
    {
      "width": 300,
      "height": 300,
      "layer": [{
      "mark": "point",
      "encoding": {
        "x": {
          "field": "rating",
          "type": "quantitative",
          "title": "HLTV 2.0 Rating",
          "scale": {"domain": [0.7,1.4]}
        },
        "y": {
          "field": "total_kills",
          "type": "quantitative",
          "title": "Total Kills",
          "scale": {"domain": [5000, 50000]}
        }
      }
    },
    {
      "mark": {"type": "errorband", "extent": "stdev", "opacity": 0.2},
      "encoding": {
        "y": {
          "field": "total_kills",
          "type": "quantitative",
          "title": "Total Kills",
          "axis": {"format": ".2f"}
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "total_kills",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    }
  ]
    }
  ]
}