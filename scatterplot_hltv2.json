{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A small multiple scatterplot showing HLTV 2.0 Rating vs KAST, Rounds Played, and Total Deaths.",
  "data": {
    "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/hltv_playerStats-complete.csv"
  },
  "hconcat": [
    {
      "width": 291,
      "height": 300,
      "layer": [{
      "mark": "point",
      "encoding": {
        "x": {
          "field": "rating",
          "type": "quantitative",
          "title": "HLTV 2.0 Rating",
          "scale": {"domain": [0.7,1.4]}
        },
        "y": {
          "field": "kast",
          "type": "quantitative",
          "title": "Kills, Assists, Survived, and Traded (KAST)%",
          "scale": {"domain": [55, 85]}
        }
      }
    },
    {
      "mark": {"type": "errorband", "extent": "stdev", "opacity": 0.2},
      "encoding": {
        "y": {
          "field": "kast",
          "type": "quantitative",
          "title": "Kills, Assists, Survived, and Traded (KAST)%",
          "axis": {"format": ".2f"}
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "kast",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    }
  ]
},
    {
      "width": 291,
      "height": 300,
      "layer": [{
      "mark": "point",
      "encoding": {
        "x": {
