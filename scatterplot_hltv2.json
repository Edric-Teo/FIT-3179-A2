          "type": "quantitative",
          "title": "HLTV 2.0 Rating",
          "scale": {"domain": [0.7,1.4]}
        },
        "y": {
          "field": "rounds_played",
          "type": "quantitative",
          "title": "Total Rounds Played",
          "scale": {"domain": [0, 70000]}
        }
      }
    },
    {
      "mark": {"type": "errorband", "extent": "stdev", "opacity": 0.2},
      "encoding": {
        "y": {
          "field": "rounds_played",
          "type": "quantitative",
          "title": "Total Rounds Played",
          "axis": {"format": ".2f"}
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "rounds_played",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    }
  ]
