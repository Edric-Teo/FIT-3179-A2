{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Countries that have hosted S-Tier Counter-Strike Tournaments",
    "subtitle": "Hover over a country to see the latest winner of the latest tournament hosted there",
    "font": "Squada One",
    "fontWeight": "normal",
    "fontSize": 24,
    "subtitleFontSize": 16,
    "anchor": "start",
    "color": "#000000"
  },
  "params": [
    {
      "name": "menuYear",
      "value": 2025,
      "bind": {
        "name": "Select Year: ",
        "input": "select",
        "options": [
          2018,
          2019,
          2021,
          2022,
          2023,
          2024,
          2025,
          2026
        ]
      }
    }
  ],
  "layer": [
    {
      "params": [
        { 
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        }
      ],
      
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#00A2E8", "opacity": 0.6}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/ne_10m_admin_0_countries_lakes.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries_lakes"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/major-tournaments.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["Tournament Name", "Start Date", "End Date", "Prize Pool", "Participating Teams", 
                        "Location","Country", "Winner"]
          },
          "default": null
        },
        {
          "calculate": "timeParse(datum['Start Date'], '%d-%b-%y')",
          "as": "parsedStart"
        },
        {
          "calculate": "timeParse(datum['End Date'], '%d-%b-%y')",
          "as": "parsedEnd"
        },
        {
          "calculate": "datum.parsedStart ? year(datum.parsedStart) : null",
          "as": "HostYear"
        },
        {
          "calculate": "(datum.HostYear !== null && datum.HostYear == menuYear) ? 'Selected' : (datum.Country != null ? 'Other Host' : 'No Host')",
          "as": "HostStatus"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "HostStatus",
          "type": "nominal",
          "legend": {"title": "Host Status"},
          "scale": {
            "domain": ["Selected", "Other Host","No Host"],
            "range": ["#FBAC18", "#878787", "#DBDBDB"]
          }
        },
        "tooltip": [
          {"field": "Tournament Name", "type": "nominal", "title": "Name"},
          {"field": "parsedStart", "type": "temporal", "title": "Start Date", "format": "%d %b %Y"},
          {"field": "parsedEnd", "type": "temporal", "title": "End Date", "format": "%d %b %Y"},
          {"field": "Prize Pool", "type": "quantitative", "title": "Prize Pool (USD)"},
          {"field": "Participating Teams", "type": "quantitative", "title": "No. of Teams"},
          {"field": "Location", "type": "nominal", "title": "Location"},
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Winner", "type": "nominal", "title": "Latest Winner"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "opacity":0.6, "strokeWidth": 1, "fill": null}
    }
  ],
  "width": 1000,
  "height": 550,
  "projection": {"type": "naturalEarth1"}
}