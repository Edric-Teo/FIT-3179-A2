{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Countries that have hosted S-Tier Counter-Strike Tournaments",
    "font": "Squada One",
    "fontWeight": "normal",
    "fontSize": 24,
    "subtitleFontSize": 16,
    "anchor": "start",
    "color": "#000000"
  },
  "params": [
    {
      "name": "menuYear",
      "value": 2025,
      "bind": {
        "name": "Select Year: ",
        "input": "range",
        "min": 2018,
        "max": 2026,
        "step": 1
      }
    }
  ],
  "layer": [
    {
      "params": [
        { 
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        }
      ],
      
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#00A2E8", "opacity": 0.6}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/ne_10m_admin_0_countries_lakes.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries_lakes"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/major-tournaments.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["Tournament Name", "Start Date", "End Date", "Prize Pool", "Participating Teams", 
                        "Location","Country", "Winner"]
          },
          "default": null
        },
        {
          "calculate": "timeParse(datum['Start Date'], '%d-%b-%y')",
          "as": "startDate"
        },
        {
          "calculate": "timeParse(datum['End Date'], '%d-%b-%y')",
          "as": "endDate"
        },
        {
          "calculate": "datum.startDate ? year(datum.startDate) : null",
          "as": "HostYear"
        },
        {
          "calculate": "(datum.HostYear !== null && datum.HostYear == menuYear) ? 'Selected' : (datum.Country != null ? 'Other Host' : 'No Host')",
          "as": "HostStatus"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "HostStatus",
          "type": "nominal",
          "legend": {"title": "Host Status"},
          "scale": {
            "domain": ["Selected", "Other Host","No Host"],
            "range": ["#FBAC18", "#878787", "#DBDBDB"]
          }
        },
        "tooltip": [
          {"field": "Tournament Name", "type": "nominal", "title": "Name"},
          {"field": "startDate", "type": "temporal", "title": "Start Date", "format": "%d %b %Y"},
          {"field": "endDate", "type": "temporal", "title": "End Date", "format": "%d %b %Y"},
          {"field": "Participating Teams", "type": "quantitative", "title": "No. of Teams"},
          {"field": "Location", "type": "nominal", "title": "Location"},
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Winner", "type": "nominal", "title": "Latest Winner"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/refs/heads/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "opacity":0.6, "strokeWidth": 1, "fill": null}
    },
    {
    "data": {
      "values": [
        {
          "Country": "China",
          "Longitude": 127.1954,
          "Latitude": 20.8617
        }
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "rect",
          "align": "left",
          "dx": 5,
          "dy": -15,
          "width": 180,
          "height": 50,
          "fill": "lightgrey",
          "stroke": "black",
          "opacity": 0.7
        },
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"}
        }
      },
      {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"value": "The first and only major hosted"}
      }
      },
      {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": 10,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"value": "in Asia was from China"}
      }
      }
    ]},
    {
    "data": {
      "values": [
        {
          "Country": "Brazil",
          "Longitude": -165.9253,
          "Latitude": -14.2350
        }
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "rect",
          "align": "left",
          "dx": 5,
          "dy": -15,
          "width": 235,
          "height": 50,
          "fill": "lightgrey",
          "stroke": "black",
          "opacity": 0.7
        },
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"}
        }
      },
      {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"value": "Brazil is the first and only country "}
      }
      },
      {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": 10,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"value": "that has hosted a Major in South America "}
      }
      }
    ]
  }
  ],
  
  "width": 1000,
  "height": 550,
  "projection": {"type": "naturalEarth1"}
}