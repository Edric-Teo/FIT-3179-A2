{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "A simple donut chart that includes data related to weapons used by pro players.",
  "title": {
    "text": "Top 5 Most Common Weapons Used by Pro Players",
    "font": "Squada One",
    "fontWeight": "normal",
    "fontSize": 24,
    "subtitleFontSize": 16,
    "anchor": "start",
    "color": "#000000"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Edric-Teo/FIT-3179-A2/main/weapons_data.csv",
    "format": {"type": "csv", "parse": {"Kills": "number"}}
  },
  "transform": [
    {
      "window": [{
        "op": "rank",
        "as": "rank"    
      }],
      "sort": [{ "field": "Kills", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 5"
    }
  ],
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "Kills", "type": "quantitative"},
    "color": {"field": "Weapon Name", "type": "nominal"},
    "tooltip": [
      {"field": "Weapon Name", "type": "nominal", "title": "Weapon Name"},
      {"field": "Kills", "type": "quantitative", "title": "Total Kills"}
    ]
  },
  "width": 1000,
  "height": 550
}