{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A radar chart example, showing multiple dimensions in a radial layout.",
  "width": 600,
  "height": 600,
  "padding": {"left": -150,"top": -200, "bottom": -40},
  "signals": [
    {"name": "radius", "update": "width / 2.5"},
    {
      "name": "selectedCategory",
      "value": "0",
      "bind": {
        "input": "select",
        "options": ["0", "1", "2", "3"],
        "labels": ["ZywOo", "S1mple", "NiKo", "donk"],
        "name": "Select Category: "
      }}
  ],

  "data": [
    {
      "name": "table",
      "values": [
        {"key": "Firepower", "value": 96, "category": "0"},
        {"key": "Entrying", "value": 36, "category": "0"},
        {"key": "Trading", "value": 71, "category": "0"},
        {"key": "Opening", "value": 71, "category": "0"},
        {"key": "Clutching", "value": 67, "category": "0"},
        {"key": "Utility", "value": 67, "category": "0"},
        {"key": "Firepower", "value": 98, "category": "1"},
        {"key": "Entrying", "value": 10, "category": "1"},
        {"key": "Trading", "value": 76, "category": "1"},
        {"key": "Opening", "value": 67, "category": "1"},
        {"key": "Clutching", "value": 85, "category": "1"},
        {"key": "Utility", "value": 62, "category": "1"},
        {"key": "Firepower", "value": 86, "category": "2"},
        {"key": "Entrying", "value": 46, "category": "2"},
        {"key": "Trading", "value": 58, "category": "2"},
        {"key": "Opening", "value": 71, "category": "2"},
        {"key": "Clutching", "value": 39, "category": "2"},
        {"key": "Utility", "value": 75, "category": "2"},
        {"key": "Firepower", "value": 100, "category": "3"},
        {"key": "Entrying", "value": 55, "category": "3"},
        {"key": "Trading", "value": 65, "category": "3"},
        {"key": "Opening", "value": 94, "category": "3"},
        {"key": "Clutching", "value": 38, "category": "3"},
        {"key": "Utility", "value": 28, "category": "3"}
      ],
      "transform": [
      {
        "type": "filter",
        "expr": "datum.category == selectedCategory"
      }
    ]
  },
  {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["key"]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "key"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "value"},
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "category"},
      "range": {"scheme": "category10"}
    }
  ],

  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["category"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "stroke": {"value": "#FBAC18"},
              "strokeWidth": {"value": 1},
              "fill": {"value": "#FBAC18"},
              "fillOpacity": {"value": 0.1}
            }
          }
        },
        {
          "type": "text",
          "name": "value-text",
          "from": {"data": "category-line"},
          "encode": {
            "enter": {
              "x": {"signal": "datum.x"},
              "y": {"signal": "datum.y"},
              "text": {"signal": "datum.datum.value"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fill": {"value": "white"}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 5) * cos(scale('angular', datum.key))"},
          "y": {"signal": "(radius + 5) * sin(scale('angular', datum.key))"},
          "text": {"field": "key"},
          "align": [
            {
              "test": "abs(scale('angular', datum.key)) > PI / 2",
              "value": "right"
            },
            {
              "value": "left"
            }
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.key) > 0", "value": "top"
            },
            {
              "test": "scale('angular', datum.key) == 0", "value": "middle"
            },
            {
              "value": "bottom"
            }
          ],
          "fill": {"value": "white"}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    }
  ]
}